<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/scan_category"
        android:key="scan_settings">
        <ListPreference
            android:title="@string/scan_period"
            android:key="scan_period"
            android:entries="@array/scan_period_entries"
            android:entryValues="@array/scan_period_values"
            android:defaultValue="120"/>
        <CheckBoxPreference
            android:key="is_network_provider_enabled"
            android:title="@string/is_network_provider_enabled"
            android:summary="@string/is_network_provider_enabled_summary"
            android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/advanced_settings_category"
        android:key="advanced_settings">
        <ListPreference
            android:title="@string/max_scan_results_for_bssid"
            android:key="max_scan_results_for_bssid"
            android:entries="@array/max_scan_results_for_bssid_entries"
            android:entryValues="@array/max_scan_results_for_bssid_values"
            android:defaultValue="4"/>
        <Preference
            android:title="@string/share_database"
            android:key="share_database"
            android:summary="@string/share_database_summary"/>
        <Preference
            android:title="@string/statistics"
            android:key="show_statistics"
            android:summary="@string/statistics_summary"/>
    </PreferenceCategory>
</PreferenceScreen>
